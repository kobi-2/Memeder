<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/browse_meme_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:text="Browse Memes!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_button"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/upload_meme_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Upload A Meme!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browse_meme_button"
        android:background="@drawable/rounded_button"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/join_meme_gang_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Join A Meme Gang!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_meme_button"
        android:background="@drawable/rounded_button"
        android:textSize="20sp"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
